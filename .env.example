# Server Configuration
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=60s

# Database Configuration (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_DBNAME=urlshortener
DATABASE_SSLMODE=disable
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=5
DATABASE_CONN_MAX_LIFETIME=5m

# PostgreSQL Environment Variables (for Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=urlshortener

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5

# Application Configuration
APP_BASE_URL=http://localhost:8080
APP_CACHE_TTL=24h
APP_SNOWFLAKE_NODE_ID=1
APP_RATE_LIMIT_REQUESTS=100
APP_RATE_LIMIT_WINDOW=1m

# Docker Container Names
POSTGRES_CONTAINER=url-shortener-postgres
REDIS_CONTAINER=url-shortener-redis
APP_CONTAINER=url-shortener-app

# Environment
ENVIRONMENT=development
